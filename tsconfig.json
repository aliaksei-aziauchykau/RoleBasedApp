{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
        "root_module/*": ["src/*"]
    }
  },
  "exclude": [
      "node_modules",
      "typings"
  ],
  "include": [
      "src/apps/site-app"
  ]
}